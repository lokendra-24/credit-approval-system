DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Database Configuration (Production PostgreSQL)
POSTGRES_DB=creditdb
POSTGRES_USER=credituser
POSTGRES_PASSWORD=secure-password-change-me
